{
	"plugins": [
		"stylelint-order"
  ],
  
	"rules": {
    "indentation":4,
    "color-hex-case":"upper",
    "color-hex-length":"long",
    "selector-pseudo-element-colon-notation":"double",
    "length-zero-no-unit":null,

		"order/order": [
			"custom-properties",
      "declarations"
    ],

    "order/properties-order": [
      "content",
      "position",
      "right",
      "left",
      "top",
      "bottom",
      "height",
      "width",
      "padding",
      "border",
      "margin",
      "border",
      "border-radius",
      "box-shadow",

      "color",
      "font",
      "font-family",
      "font-size",
      "font-height",
      "font-weight",
      "text-decoration",
      "text-align",
      "opacity",
      "background-color",
      "background-image",
      "background-size",
      "background-position",

      "transform",
      "transition-property",
      "transition-duration",
      "animation-timing-function",
      "user-select",
      "cursor",

      "display",
      "flex-direction",
      "box-sizing",
      "align-content",
      "align-items",
      "justify-content",
      "justidy-items",
      "grid-column",
      "grid-row",
      "grid-template-columns",
      "grid-template-rows",
      "grid-area",
      "z-index",
      "owerflow-x"
    ],
    
		"order/properties-alphabetical-order": null
	}
}