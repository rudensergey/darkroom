.header
    position: fixed
    height: 70px
    width: 100%
    padding: 15px 28px 15px 28px

    border-bottom: solid 1px var(--bottom-grey)
    background-color: var(--header-backcolor-white)

    transition-duration: 1s

    display: flex
    box-sizing: border-box
    justify-content: space-between
    z-index: 5

.logo
    margin-top: 5px
    height: 30px


.header-buttons 
    height: 40px
    width: 540px
    margin-top: 1px
    display: flex
    justify-content: flex-end


.menu-explore 
    width: 86px


.menu-cart 
    width: 63px


.menu-login 
    width: 112px


.menu-gallery 
    width: 192px


.menu-text  
    margin: 9px 0px 20px 0px
    
    color: var(--middle-grey)
    font-size: 16px
    text-decoration: none
    text-align: center

    transition-duration: 1s

    display: block


.dark-mode-button 
    height: 20px
    width: auto
    padding: 8px 20px 9px 20px
    margin: 1px auto
    border-radius: 4px
    color: var(--dark-mode-yellow)
    opacity: 1
    background-color: var(--bottom-grey)
    transform: translateY(0)
    transition-property: padding, opacity, background-color, color, transform
    transition-duration: 0.5s
    animation-timing-function: "1,-0.03,.38,-0.56"
    user-select: none
    cursor: pointer
    display: block

    &:hover 
        padding: 8px 25px 9px 15px
        color: var(--darkmode-text-white)
        opacity: 0.9
        background-color: var(--darkmode-bottom-black)
        transition-duration: 1s
        
        &::after 
            opacity: 1
            transform: translateX(3px)

    &:active 
        transform: translateY(2px)

    &::after 
        content: ""
        position: absolute
        margin-top: 3px
        height: 15px
        width: 15px
        opacity: 0
        background-image: var(--dark-mode-pic)
        background-size: cover
        transform: translateX(0px)
        transition-property: transform, opacity
        transition-duration: 0.5s
        animation-timing-function: 0, 0.51, 1, 0.21

/* UNDERLINE EFFECT */

.menu-underlined
    &::after 
        content: ""
        height: 2px
        width: 0
        margin: auto
        margin-top: 5px

        background: var(--middle-green)
        
        transition: width 0.35s
        transition-timing-function: ease

        display: block

  
    &-explore
        &:hover
            &::after 
                width: 54px

      
    &-cart
        &:hover
            &::after 
                width: 34px


/* END */

#menu-login 
    height: 20px
    width: 41px
    padding: 6px 18px 7px 18px
    margin: 1px auto
    border: 2px solid var(--middle-grey)
    border-radius: 4px

    color: var(--middle-grey)
    
    transition-property: color, border-color
    transition-duration: 0.35s

    display: block
    
    &:hover 
        color: var(--middle-green)
        border-color: var(--middle-green)

        transition-duration: 1s


#menu-gallery 
    height: 20px
    width: 120.5px
    padding: 8px 20px 9px 20px
    margin: 1px auto
    border-radius: 4px

    color: #FFFFFF
    opacity: 1
    background-color: var(--middle-green)

    transition-property: opacity
    transition-duration: 0.35s

    display: block
    
    &:hover
        opacity: 0.9
